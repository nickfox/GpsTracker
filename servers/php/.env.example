# GPS Tracker Environment Configuration
# Copy this file to .env and update the values accordingly

# Application Settings
APP_NAME="GPS Tracker"
APP_ENV=production     # Options: production, development
APP_DEBUG=false        # Set to true for development
APP_TIMEZONE=UTC       # e.g., America/New_York, Europe/London

# Database Configuration
# Choose one database driver and configure its settings

# SQLite (Simplest setup - no additional configuration needed)
DB_DRIVER=sqlite
DB_SQLITE_PATH=sqlite/gpstracker.sqlite  # Path relative to server root

# MySQL Configuration
# DB_DRIVER=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=YOUR_DATABASE_NAME
# DB_USERNAME=YOUR_DATABASE_USERNAME
# DB_PASSWORD=YOUR_DATABASE_PASSWORD
# DB_TABLE_PREFIX=YOUR_TABLE_PREFIX  # Leave empty if not needed

# PostgreSQL Configuration
# DB_DRIVER=postgresql
# DB_HOST=localhost
# DB_PORT=5432
# DB_DATABASE=YOUR_DATABASE_NAME
# DB_USERNAME=YOUR_DATABASE_USERNAME
# DB_PASSWORD=YOUR_DATABASE_PASSWORD
# DB_TABLE_PREFIX=YOUR_TABLE_PREFIX  # Leave empty if not needed

# Maps Configuration
MAP_PROVIDER=openstreetmap  # Options: openstreetmap, google
GOOGLE_MAPS_KEY=YOUR_GOOGLE_MAP_KEY  # Only needed if using Google Maps

# Logging Configuration
LOG_CHANNEL=file      # Options: file, stderr
LOG_LEVEL=error       # Options: debug, info, warning, error, critical

# Units Configuration
DISTANCE_UNIT=mi      # Options: mi (miles), km (kilometers)
SPEED_UNIT=mph        # Options: mph (miles per hour), kph (kilometers per hour)